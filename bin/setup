#!/bin/bash
set -e
wget http://www.php.net/get/php-5.4.13.tar.bz2/from/a/mirror
mkdir local
tar jxvf php-5.4.13.tar.bz2
cd php-5*
./configure --prefix=$HOME/local
make
make install
cd ..
wget http://pear.php.net/go-pear.phar 
php go-pear.phar
pear channel-discover pear.phing.info
pear install phing/phing
phpenv rehash
composer install
